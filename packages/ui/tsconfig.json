{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["es6", "dom", "dom.iterable"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true,
    "declaration": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "jsx": "react-jsx",
    "allowSyntheticDefaultImports": true,
    "baseUrl": "src",
    "paths": {
      "@elavira/config": ["../config/src"]
    }
  },
  "include": ["src/**/*", "src/**/*.tsx"],
  "exclude": ["dist", "node_modules"]
}
