{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["es6"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true,
    "declaration": true,
    "baseUrl": ".",
    "paths": {
      "@elavira/config": ["./packages/config/src"],
      "@elavira/core": ["./packages/core/src"],
      "@elavira/rag": ["./packages/rag/src"],
      "@elavira/ui": ["./packages/ui/src"]
    }
  },
  "include": [
    "packages/**/*.ts",
    "packages/**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "apps/**/*",
    "dist"
  ]
}
