{
  "name": "elavira-agents",
  "version": "1.0.0",
  "description": "Plateforme locale d'agents IA spécialisés avec modèles Ollama et RAG",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "start": "turbo run start",
    "lint": "turbo run lint",
    "clean": "turbo run clean",
    "type-check": "turbo run type-check",
    "db:generate": "turbo run db:generate",
    "db:migrate": "turbo run db:migrate",
    "db:seed": "turbo run db:seed",
    "worker:dev": "pnpm --filter=@elavira/worker dev",
    "worker:start": "pnpm --filter=@elavira/worker start",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "deploy:prod": "pnpm build && pnpm docker:build && pnpm docker:up",
    "dev:full": "concurrently \"pnpm docker:up\" \"pnpm worker:dev\" \"pnpm dev\""
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^8.41.0",
    "@typescript-eslint/parser": "^8.41.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.55.0",
    "ioredis": "^5.7.0",
    "node-fetch": "2",
    "pg": "^8.16.3",
    "prettier": "^3.1.0",
    "turbo": "^1.11.0",
    "typescript": "^5.3.0"
  },
  "packageManager": "pnpm@8.15.0",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}
